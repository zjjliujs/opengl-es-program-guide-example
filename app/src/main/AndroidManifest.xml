<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.airhockey.android">

    <!-- Tell the system this application requires OpenGL ES 3.0. -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".first.FirstOpenGLProjectActivity"/>

        <activity
            android:name=".airhockey1.AirHockey1Activity"/>

        <activity
            android:name=".airhockey2.AirHockey2Activity"/>

        <activity
            android:name=".ortho.AirHockeyOrthoActivity"/>

        <activity
            android:name=".airhockey3d.AirHockey3DActivity"/>

        <activity
            android:name=".texture.AirHockeyTextureActivity"/>

        <activity
            android:name=".immallete.HockeyImMalletActivity"/>

        <activity
            android:name=".touch.AirHockeyTouchActivity"/>

        <activity
            android:name=".particles.ParticlesActivity"/>

        <activity
            android:name=".skybox.ParticlesSkyBoxActivity"/>

        <activity
            android:name=".heightmap.ParticlesHeightMapActivity"/>

        <activity
            android:name=".lighting.LightingParticlesActivity"/>

    </application>

</manifest>
